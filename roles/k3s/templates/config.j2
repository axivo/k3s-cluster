{% if k3s_service_type == 'server' %}
bind-address: {{ k3s_server_default_ip }}
cluster-dns: {{ k3s_vars.server.cluster.dns }}
cluster-domain: {{ k3s_vars.server.cluster.domain }}
{% if k3s_ha_cluster and not k3s_config_postinstall and ansible_host == k3s_server_default_host %}
cluster-init: true
{% endif %}
disable:
  - local-storage
  - servicelb
  - traefik
disable-cloud-controller: true
disable-kube-proxy: true
disable-network-policy: true
embedded-registry: true
etcd-expose-metrics: true
flannel-backend: none
{% endif %}
{% if
  (k3s_node_agent_taint | length > 0) or
  (k3s_vars.server.controlplane.tainted and k3s_service_type == 'server' and k3s_node_default_taint | length > 0)
%}
node-taint:
{% if k3s_node_agent_taint | length > 0 %}
  {{ k3s_node_agent_taint | to_nice_yaml | indent(2) }}
{%- endif %}
{% if k3s_vars.server.controlplane.tainted and k3s_service_type == 'server' and k3s_node_default_taint | length > 0 %}
  {{ k3s_node_default_taint | to_nice_yaml | indent(2) }}
{%- endif %}
{% endif %}
{% if k3s_ha_cluster and (k3s_config_postinstall or k3s_service_type == 'agent') %}
server: https://{{ k3s_vars.server.api.host }}:{{ k3s_vars.server.api.port }}
{% elif
  (ansible_host != k3s_server_default_host and k3s_service_type == 'server') or
  (k3s_non_ha_cluster and k3s_service_type == 'agent')
%}
server: https://{{ k3s_server_default_host }}:{{ k3s_vars.server.api.port }}
{% endif %}
{% if k3s_ha_cluster and k3s_service_type == 'server' %}
tls-san:
{% if cloudflare_vars.kubernetes.gateway.domain != 'disabled' %}
  {{ [hostname, k3s_vars.server.api.host] | to_nice_yaml | indent(2) }}
{%- else %}
  {{ [k3s_vars.server.api.host] | to_nice_yaml | indent(2) }}
{%- endif %}
{% endif %}
{% if k3s_token | length > 0 %}
token: {{ k3s_token }}
{% endif %}
