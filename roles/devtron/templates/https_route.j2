apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: https-route-{{ devtron_vars.kubernetes.server.gateway.service }}
  namespace: {{ devtron_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ hostname }}
  parentRefs:
    - kind: Gateway
      name: {{ devtron_vars.kubernetes.server.gateway.service }}
      namespace: {{ devtron_vars.kubernetes.namespace }}
      sectionName: https
  rules:
    - backendRefs:
        - kind: Service
          name: {{ devtron_vars.kubernetes.server.gateway.service }}
          port: 443
      matches:
        - path:
            type: PathPrefix
            value: /
