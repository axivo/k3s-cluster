apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: https-route-{{ k3s_vars.kubernetes.gateway.service }}
  namespace: {{ k3s_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ hostname }}
  parentRefs:
    - kind: Gateway
      name: {{ k3s_vars.kubernetes.gateway.service }}
      namespace: {{ k3s_vars.kubernetes.namespace }}
      sectionName: https
  rules:
    - backendRefs:
        - kind: Service
          name: {{ k3s_vars.kubernetes.gateway.service }}
          port: 443
      matches:
        - path:
            type: PathPrefix
            value: /
