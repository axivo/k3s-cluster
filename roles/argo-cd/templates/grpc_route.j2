apiVersion: gateway.networking.k8s.io/v1
kind: GRPCRoute
metadata:
  name: {{ argocd_map.gateway.cli.grpc_route }}
  namespace: {{ argocd_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ argocd_map.gateway.server.hostname }}
  parentRefs:
    - kind: Gateway
      name: {{ argocd_vars.kubernetes.server.gateway.service }}
      namespace: {{ argocd_vars.kubernetes.namespace }}
      sectionName: https
  rules:
    - backendRefs:
        - kind: Service
          name: {{ argocd_vars.kubernetes.server.gateway.service }}
          port: 443
      matches:
        - method:
            service: argocd
            type: Exact
