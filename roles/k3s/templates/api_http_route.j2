apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: http-route-{{ k3s_vars.kubernetes.gateway.service }}
  namespace: {{ k3s_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ hostname }}
  parentRefs:
    - kind: Gateway
      name: {{ k3s_vars.kubernetes.gateway.service }}
      namespace: {{ k3s_vars.kubernetes.namespace }}
      sectionName: http
  rules:
    - filters:
        - requestRedirect:
            scheme: https
            statusCode: 301
          type: RequestRedirect
      matches:
        - path:
            type: PathPrefix
            value: /
